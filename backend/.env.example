# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database"

# Redis Configuration (Use REDIS_URL for production or REDIS_HOST/PORT for local)
REDIS_URL=redis://host:6379
# OR for local development:
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Server
PORT=4000

# SMTP Configuration (Get free test account at https://ethereal.email)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your.email@ethereal.email
SMTP_PASS=your-password

# Rate Limiting Configuration
MAX_EMAILS_PER_HOUR=200
DELAY_BETWEEN_EMAILS_MS=2000
WORKER_CONCURRENCY=5
